#!/bin/sh
# Feed this script a link and it will give rofi list of options to open with

# The URL will be shown visually in 30 characters or less.
if [[ "${#1}" -gt 30 ]];
then
    visual="${1:0:20}"..."${1: -7}"
else
    visual="$1"
fi
echo $visual

options=$(printf "umpv\n\
mpv\n\
firefox\n\
feh\n\
paragraph\n\
summary\n\
ytdl\n\
speedread\n\
speedread_summary"\
| rofi -dmenu -i -mesg "How should I open '$visual'?" -select)

echo "$options"

case "$options" in
    umpv) $HOME/Git/scripts/shell/umpv "$1" & ;;
    mpv) mpv --pause --ytdl-format="best[height<=720]" --quiet "$1" 2&>/dev/null & ;;
    firefox) firefox "$1";;
    feh) feh --scale-down --recursive "$1" --title "%S %n";;
    paragraph) pass;;
    summary) pass;;
    ytdl) youtube-dl "$1" > /dev/null 2>&1 & ;;
    speedread) pass;;
    speedread_summary) pass;;
    *) "$options" "$1";;
esac
